<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Equipments - MediTrack</title>
    <!-- Remix Icon CDN -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
</head>

<body class="w-full min-h-screen bg-gray-100 flex flex-row text-gray-800">

    <div class="w-1/4 min-h-screen bg-white flex flex-col gap-[50px] text-black shadow-2xl">

        <div id="medi" class="logo ml-4 mt-6 flex items-center gap-2">
            <i class="ri-heart-pulse-fill text-red-500 text-4xl"></i>
            <span class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-red-700">MediTrack</span>
        </div>
        
        <div class="flex flex-col text-gray-600 mt-4">
            <a href="/show">
                <div class="flex flex-row gap-[25px] py-4 justify-start ml-2 items-center rounded-md transition-colors duration-300 hover:bg-red-500 hover:text-white group">
                    <i class="ri-eye-line text-2xl text-red-500 group-hover:text-white"></i>
                    <div class="text-xl font-bold">Equipments</div>
                </div>
            </a>
            <a href="/reminder">
                <div class="flex flex-row gap-[25px] py-4 justify-start items-center ml-2 rounded-md transition-colors duration-300 hover:bg-red-500 hover:text-white group">
                    <i class="ri-error-warning-line text-2xl text-red-500 group-hover:text-white"></i>
                    <div class="text-xl font-bold">Reminders</div>
                </div>
            </a>
            <a href="/update">
                <div class="flex flex-row gap-[25px] py-4 justify-start ml-2 items-center rounded-md transition-colors duration-300 hover:bg-red-500 hover:text-white group">
                    <i class="ri-refresh-line text-2xl text-red-500 group-hover:text-white"></i>
                    <div class="text-xl font-bold">Update</div>
                </div>
            </a>
            <a href="/add">
                <div class="flex flex-row gap-[25px] py-4 justify-start ml-2 items-center rounded-md transition-colors duration-300 hover:bg-red-500 hover:text-white group">
                    <i class="ri-add-large-line text-2xl text-red-500 group-hover:text-white"></i>
                    <div class="text-xl font-bold">Add Equipment</div>
                </div>
            </a>
            <a href="/record">
                <div class="flex flex-row gap-[25px] py-4 justify-start ml-2 items-center rounded-md transition-colors duration-300 hover:bg-red-500 hover:text-white group">
                    <i class="ri-folder-history-fill text-2xl text-red-500 group-hover:text-white"></i>
                    <div class="text-xl font-bold">Record Usage</div>
                </div>
            </a>
            <a href="/profile">
                <div class="flex flex-row gap-[25px] py-4 justify-start ml-2 items-center rounded-md transition-colors duration-300 hover:bg-red-500 hover:text-white group">
                    <i class="ri-user-fill text-2xl text-red-500 group-hover:text-white"></i>
                    <div class="text-xl font-bold">Hospital Profile</div>
                </div>
            </a>
            <div class="flex flex-row gap-[25px] py-4 justify-start ml-2 items-center rounded-md transition-colors duration-300 hover:bg-red-500 hover:text-white group">
                <i class="ri-mail-fill text-2xl text-red-500 group-hover:text-white"></i>
                <div class="text-xl font-bold">About</div>
            </div>
        </div>
    </div>


    <div class="w-3/4 min-h-screen p-10">
        <h1 class="text-4xl font-bold text-gray-800 mb-6">All Equipments of Your Hospital</h1>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% if (user.equipments && user.equipments.length > 0) { %>
                <% 
                    const today = new Date(); 
                    const activeEquipments = user.equipments.filter(equipment => {
                        return !equipment.DateExpired || new Date(equipment.DateExpired) >= today;
                    });
                %>
                <% activeEquipments.forEach(function(u) { %>
                    <div class="bg-white rounded-xl shadow-md p-6 transition-transform transform hover:scale-105 hover:shadow-xl border-t-4 border-green-500">
                        <h2 class="text-2xl font-bold text-gray-800 mb-4">
                            <%= u.EquipmentName %>
                        </h2>
                        <p class="text-gray-700 mb-2"><strong class="font-semibold">ID:</strong> <%= u.EquipmentId %></p>
                        <p class="text-gray-700 mb-2"><strong class="font-semibold">Category:</strong> <%= u.Category.join(', ') %></p>
                        <p class="text-gray-700 mb-2"><strong class="font-semibold">Description:</strong> <%= u.Description %></p>
                        <p class="text-gray-700 mb-2"><strong class="font-semibold">Quantity:</strong> <%= u.Quantity %></p>
                        <p class="text-gray-700 mb-2"><strong class="font-semibold">Manufacturer:</strong> <%= u.Manufacturer || 'N/A' %></p>
                        <p class="text-gray-700 mb-2"><strong class="font-semibold">Date Expired:</strong> <%= u.DateExpired ? new Date(u.DateExpired).toLocaleDateString() : 'N/A' %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-lg text-gray-600">No active equipment found for this hospital.</p>
            <% } %>
        </div>
    </div>

</body>
</html>