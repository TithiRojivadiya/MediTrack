                    tension: 0.3,
                    fill: true
                  }]
                };
            
                const config = {
                  type: 'line',
                  data: data,
                  options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                      x: {
                        title: { display: true, text: 'Equipment' }
                      },
                      y: {
