    <!-- Graph inside a White Card -->
<div class="bg-white shadow-md rounded-lg m-8 p-4 w-[600px] h-[400px] flex justify-center items-center">
    <canvas id="lineChart"></canvas>
</div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const ctx = document.getElementById('lineChart').getContext('2d');
    
        const labels = ['Diagnostic', 'Therapeutic', 'Surgical', 'Monitoring', 'Others'];
        const data = {
          labels: labels,
          datasets: [{
            label: 'Equipment Quantity',
            data: [650, 594, 804, 814, 565], // Sample values
            borderColor: 'rgb(75, 192, 192)',
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            borderWidth: 2,
            tension: 0.3,
            fill: true
          }]
        };
    
        const config = {
          type: 'line',
          data: data,
          options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              x: {
                title: { display: true, text: 'Equipment' }
              },
              y: {
                beginAtZero: true,
                title: { display: true, text: 'Equipment Quantity' }
              }
            }
          }
        };
    
        new Chart(ctx, config);
      });
    </script>



