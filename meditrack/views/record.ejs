<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Record Usage - MediTrack</title>
    <!-- Remix Icon CDN -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="w-full min-h-screen bg-gray-100 flex flex-row text-gray-800">

    <% include partials/header %> 

    <div class="w-3/4 min-h-screen p-10">
        <h1 class="text-4xl font-bold text-gray-800 mb-6">Record Usage of Equipments</h1>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white shadow-md rounded-lg">
                <thead>
                    <tr>
                        <th class="py-3 px-6 bg-red-500 text-left text-white uppercase text-sm">Equipment ID</th>
                        <th class="py-3 px-6 bg-red-500 text-left text-white uppercase text-sm">Equipment Name</th>
                        <th class="py-3 px-6 bg-red-500 text-left text-white uppercase text-sm">Usage Details</th>
                    </tr>
                </thead>
                <tbody>
                    <% equipments.reverse().forEach(equipment => { %>
                        <% if (equipment.UsageDates && equipment.UsageDates.length > 0) { %>
                            <tr class="border-b hover:bg-gray-100">
                                <td class="py-4 px-6"><%= equipment.EquipmentId %></td>
                                <td class="py-4 px-6"><%= equipment.EquipmentName %></td>
                                <td class="py-4 px-6">
                                    <ul class="list-disc ml-5 ">
                                        <% equipment.UsageDates.forEach(usage => { %>
                                            <li class="flex flex-row items-center justify-between  py-2">
                                                <div class="flex items-center space-x-2">
                                                    <div class="text-sm text-gray-500">Date:</div>
                                                    <div class="text-lg font-bold text-red-600">
                                                        <%= new Date(usage.date).toLocaleDateString() %>
                                                    </div>
                                                </div>
                                                <div class="flex items-center space-x-2">
                                                    <div class="text-sm text-gray-500">Quantity Used:</div>
                                                    <div class="text-lg font-bold text-blue-600">
                                                        <%= usage.quantityUsed %>
                                                    </div>
                                                </div>
                                            </li>
                                        <% }) %>
                                    </ul>
                                </td>
                            </tr>
                        <% } %>
                    <% }) %>
                    
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>
